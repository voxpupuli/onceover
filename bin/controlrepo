#!/usr/bin/env ruby

require 'controlrepo/cli'
require 'colored'

begin
  Controlrepo::CLI.command.run(ARGV)
rescue Interrupt
  $stderr.puts "Aborted!".red
  exit(1)
rescue SystemExit => e
  exit(e.status)
rescue Exception => e
  $stderr.puts "\nError while running: #{e.inspect}".red
  $stderr.puts e.backtrace.join("\n").red if ARGV.include? '--trace'
  exit(1)
end
